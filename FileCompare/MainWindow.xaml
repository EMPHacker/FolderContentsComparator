<Window x:Class="FileCompare.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileCompare"
        mc:Ignorable="d"
        Title="FSCUtility" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="81"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*" Name="MainElementsCol"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>


            <TreeView Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Name="ContentsFolder1"/>
            
            <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Height="100" ResizeBehavior="PreviousAndNext"/>

            <TreeView Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="1" Name="ContentsFolder2"/>
        </Grid>



        <Grid Grid.Column="1" Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="4"/>
                <RowDefinition Height="23"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="23"/>
                <RowDefinition Height="4"/>
                <RowDefinition Height="23"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="75"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Grid.Row="1" HorizontalAlignment="Left" Height="23" Text="Folder 1"/>
            <TextBox Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch" Height="23" Margin="0, 0, 5, 0" Name="URLFolder1" TextWrapping="NoWrap"/>
            <Button Grid.Column="2" Grid.Row="1" HorizontalAlignment="Right" Height="23" Width="75" Name="BrowseFolder1" Content="Select" Click="BrowseFolder1_Click"/>
            
            <TextBlock Grid.Column="0" Grid.Row="3" HorizontalAlignment="Left" Text="Folder 2"/>
            <TextBox Grid.Column="1" Grid.Row="3" HorizontalAlignment="Stretch" Height="23" Margin="0, 0, 5, 0" TextWrapping="NoWrap" Name="URLFolder2"/>
            <Button Grid.Column="2" Grid.Row="3" HorizontalAlignment="Right" Content="Select" Height="23" Width="75" Name="BrowseFolder2" Click="BrowseFolder2_Click"/>

            <Button Grid.Column="1" Grid.Row="5" Name="CompareProcessBtn"  Content="Compare" Width="75" Click="CompareProcessBtn_Click"/>
            <ProgressBar Grid.Column="0" Grid.Row="5" HorizontalAlignment="Stretch" Height="10" Name="VisualFeedbackBar" VerticalAlignment="Center" IsIndeterminate="True" Visibility="Hidden"/>

        </Grid>
    </Grid>
</Window>
